{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "zeroConfig": true
      }
    },
    {
      "src": "api/app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/app.py"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/index.html"
    }
  ],
  "build": {
    "env": {
      "NODE_VERSION": "20.x"
    }
  },
  "installCommand": "npm install --force",
  "buildCommand": "npm run build",
  "devCommand": "vite --port $PORT",
  "framework": "vite",
  "regions": ["iad1"],
  "env": {
    "NPM_CONFIG_FORCE": "true"
  }
}
