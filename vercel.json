{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "zeroConfig": true
      }
    },
    {
      "src": "api/app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/app.py"
    },
    {
      "src": "/favicon.ico",
      "dest": "/dist/favicon.ico"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/dist/assets/$1"
    },
    {
      "src": "/(.*)\\.(?:ico|gif|jpg|jpeg|png|webp|svg)$",
      "dest": "/dist/$1.$2"
    },
    {
      "src": "/(.*)\\.(?:js|css|html)$",
      "dest": "/dist/$1.$2"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/index.html",
      "headers": {
        "Cache-Control": "no-cache, no-store, must-revalidate"
      }
    }
  ],
  "build": {
    "env": {
      "NODE_VERSION": "20.x"
    }
  },
  "installCommand": "npm install --force",
  "buildCommand": "npm run build",
  "devCommand": "vite --port $PORT",
  "framework": "vite",
  "regions": ["iad1"],
  "env": {
    "NPM_CONFIG_FORCE": "true"
  }
}
